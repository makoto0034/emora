<div class="messageboard_new">
    <%=form_tag(message_boards_path,:class => 'messageboard_container') do %>
        <div class="input-group mb-5">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">掲示板の名前</span>
          </div>
          <input type="text" name="name" placeholder="例）今日あった面白いこと" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-5">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">カテゴリ</span>
          </div>
          <select name="category_id" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
            <%@categories.each do |category|%>
              <option value=<%=category.id%>><%=category.name%></option>
            <%end%>
          </select>
        </div>
      <div class="form-group mb-5">
        <textarea name="detail" rows="5" class="form-control" placeholder="例）今日あった面白いことをみんなで話し合おう！！！" ></textarea>
        <input type="submit" valfue="作成">
      </div>
    <%end%>
</div>
