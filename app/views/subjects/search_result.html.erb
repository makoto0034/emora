<div class="search_result">
    <%if @subjects == nil%>

    <%else%>
      <%if @subjects.first == nil or @subjects == ""%>
          <p>検索結果は０件です</p>
      <%else%>
        <table>
          <thead>
            <tr>
              <th>名前</th>
              <th>コード</th>
            </tr>
          </thead>
          <tbody>
            <% @subjects.each do |subject| %>
              <tr>
                <td><%=subject.name%></td>
                <td><%= subject.subject_code%></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      <% end %>
    <%end%>
    <%=link_to'検索画面に戻る','/subjects/search',class:'back'%>
</div>
