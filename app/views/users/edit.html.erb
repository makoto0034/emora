<div class="user_edit">
  <div class="profile_edit">
    <%=image_tag url_for(@user.avatar),size:"150x150",class:'avatar mt-3'%>
    <%=form_tag ({ :controller => 'users', :action => 'image_update' }),multipart: true,id:"avatar-edit",class:"mt-3" do%>
        <%=file_field_tag "image",id:"file",style:"display:none;",accept:"	image/jpeg,image/png" %>
        <button id="file-edit-btn" class="btn purple-btn mb-3">プロフィール画像を変更</button>
        <script>
          $("#file-edit-btn").click(function(){
            $("#file").click();
            return false;
          })
          $(function(){
            $("#file").change(function(){
              $(this).closest("form").submit();
            })
          })
        </script>
    <%end%>
    <%=form_tag ({ :controller => 'users', :action => 'update' }) do%>
      <p>自己紹介</p>
      <textarea name="profile" rows="5" cols="80"><%=current_user.profile%></textarea><br>
      <input class="btn mt-3 purple-btn" type="submit" value="変更を保存">
    <%end%>
  </div>
</div>
