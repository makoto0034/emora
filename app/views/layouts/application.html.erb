<!DOCTYPE html>
<html>
  <head>
    <title>Emora</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/9322749711.js"></script>
  </head>
  <body>
    <header>
      <div class="header_inner">
        <div class="header_title">
          <h1><%=link_to"Emora","/"%></h1>
        </div>
        <div class="global_nav">
          <nav>
              <% if user_signed_in? %>
                <div id="nav-drawer">
                    <input id="nav-input" type="checkbox" class="nav-unshown">
                    <label id="nav-open" for="nav-input"><span></span></label>
                    <label class="nav-unshown" id="nav-close" for="nav-input"></label>
                    <div id="nav-content">
                      <ul class="signed_in_list">
                        <li>
                          <%=link_to user_path(current_user) do%>
                            <p><i class="fas fa-user"></i> <%=current_user.name%></p>
                          <%end%>
                          <%=link_to destroy_user_session_path, method: :delete do %>
                            　<i class="fas fa-sign-out-alt"></i>
                          <%end%>
                        </li>
                        <li>
                          <%=link_to timetables_path(current_user) do%>
                            <p><i class="fas fa-table"></i> 時間割</p>
                          <%end%>
                        </li>
                        <li>
                          <%=link_to message_boards_path do%>
                            <p><i class="fas fa-comments"></i> 掲示板</p>
                          <%end%>
                        </li>
                        <li>
                          <%=link_to "/subjects/search" do%>
                            <p><i class="fas fa-book-open"></i> シラバス検索</p>
                          <%end%>
                        </li>
                      </ul>
                    </div>
                 </div>
              <% else %>
                <ul class="logout_list">
                  <li>
                    <%=link_to(new_user_registration_path,class:"login_var") do%>
                      <span>新規登録</span>
                    <%end%>
                  </li>
                  <li>
                    <%=link_to(new_user_session_path,class:"login_var") do%>
                      <span>ログイン</span>
                    <%end%>
                  </li>
                </ul>
              <% end %>
          </nav>
        </div>
      </div>
    </header>
    <%if flash[:notice] %>
      <div class="notice">
        <p><%= notice %></p>
      </div>
    <%elsif flash[:alert]%>
    <div class="alert">
      <p><%= alert %></p>
    </div>
    <%elsif flash[:success]%>
    <div class="success">
      <p><%= success %></p>
    </div>
    <%end%>
     <p class="entire">
       <%= yield %>
     </p>
  </body>
</html>
